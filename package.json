{
  "name": "screen-wiper",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "predev": "rimraf dist && mkdir dist && cp icon16.png ./dist/icon16.png",
    "dev": "run-p dev:*",
    "dev:main": "cross-env WEBPACK_ENV=\"development\" webpack --config webpack.config.main.ts --watch",
    "dev:render": "cross-env WEBPACK_ENV=\"development\" webpack --config webpack.config.render.ts --watch",
    "dev:electron": "wait-on ./dist/renderer/splash.html && cross-env NODE_ENV=\"development\" ./node_modules/.bin/electron .",
    "build": "run-s predev build:main build:render build:{1} --",
    "build:main": "cross-env WEBPACK_ENV=\"development\" webpack --config webpack.config.main.ts",
    "build:render": "cross-env WEBPACK_ENV=\"development\" webpack --config webpack.config.render.ts",
    "build:mac": "wait-on ./dist/renderer/splash.html && electron-builder --mac --x64",
    "build:win": "wait-on ./dist/renderer/splash.html && electron-builder --win --x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.electron.wiper-screen",
    "directories": {
      "output": "./builder"
    },
    "files": [
      "dist",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "./icon256.png"
    },
    "win": {
      "target": "nsis",
      "icon": "./icon256.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.17.12",
    "@types/node": "^17.0.43",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.0.2",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.52.3",
    "sass-loader": "^13.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "wait-on": "^6.0.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  }
}
